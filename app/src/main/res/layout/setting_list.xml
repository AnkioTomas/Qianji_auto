<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="懒人模式" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/lazy_mode_open"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe637;"
                    app:sub_text="开启懒人模式不需要做任何设置"
                    app:title_text="开启" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/lazy_mode_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe6b3;"
                    app:sub_text="关闭懒人模式需要复杂的配置"
                    app:title_text="关闭">

                </cn.dreamn.qianji_auto.ui.views.SuperText>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="前台交易记账模式" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/pay_all"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe6d9;"
                    app:sub_text="不弹出选择面板"
                    app:title_text="全自动记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/pay_half"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe631; "
                    app:sub_text="弹出分类选择框进行分类选择记账"
                    app:title_text="半自动记账">

                </cn.dreamn.qianji_auto.ui.views.SuperText>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="后台交易记账模式" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/income_all"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe6d9;"
                    app:sub_text="不弹出选择面板"
                    app:title_text="全自动记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/income_half"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe631; "
                    app:sub_text="弹出通知，点击通知处理账单"
                    app:title_text="半自动记账">

                </cn.dreamn.qianji_auto.ui.views.SuperText>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="默认账本" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/default_bookName"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe610;"
                    app:sub_text="免费用户保持不动即可"
                    app:title_text="默认账本" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="记账备注样式" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe63b;"
                    app:sub_text="支持[...]"
                    app:title_text="[商户名]-[商户信息]" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="自动分类填充" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/auto_sort_open"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe637;"
                    app:sub_text="开启后自动记录分类"
                    app:title_text="开启" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/auto_sort_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe6b3;"
                    app:sub_text="关闭后无法自动记录分类"
                    app:title_text="关闭">

                </cn.dreamn.qianji_auto.ui.views.SuperText>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="悬浮窗倒计时" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/count_down"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe62a; "
                    app:sub_text="小窗口倒计时的时间"
                    app:title_text="倒计时时间：" />

                <SeekBar
                    android:id="@+id/count_down_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="60" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="悬浮窗点击触发操作" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/click_window_record"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe630;"
                    app:sub_text="直接向记账App发起记账请求"
                    app:title_text="直接记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/click_window_edit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe603;"
                    app:sub_text="进行二次记账确认"
                    app:title_text="弹出编辑面板" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/click_window_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe7bc;"
                    app:sub_text="此次账单不作记录"
                    app:title_text="关闭记账" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="悬浮窗长按触发操作" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/long_click_window_record"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe630;"
                    app:sub_text="直接向记账App发起记账请求"
                    app:title_text="直接记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/long_click_window_edit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe603;"
                    app:sub_text="进行二次记账确认"
                    app:title_text="弹出编辑面板" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/long_click_window_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe7bc;"
                    app:sub_text="此次账单不作记录"
                    app:title_text="关闭记账" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="悬浮窗倒计时结束触发操作" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/end_window_record"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe630;"
                    app:sub_text="直接向记账App发起记账请求"
                    app:title_text="直接记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/end_window_edit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe603;"
                    app:sub_text="进行二次记账确认"
                    app:title_text="弹出编辑面板" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/end_window_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe7bc;"
                    app:sub_text="此次账单不作记录"
                    app:title_text="关闭记账" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="通知点击触发操作" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/notice_click_window_record"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe630;"
                    app:sub_text="直接向记账App发起记账请求"
                    app:title_text="直接记账" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/notice_click_window_edit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe603;"
                    app:sub_text="进行二次记账确认"
                    app:title_text="弹出编辑面板" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/notice_click_window_close"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe7bc;"
                    app:sub_text="此次账单不作记录"
                    app:title_text="关闭记账" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="编辑弹窗样式" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/qianji_auto"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe6d9;"
                    app:sub_text="支持分类填充功能"
                    app:title_text="自动记账（推荐）" />

                <cn.dreamn.qianji_auto.ui.views.SuperText
                    android:id="@+id/qianji_ui"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:left_icon="&#xe63c;"
                    app:sub_text="不支持分类填充功能"
                    app:title_text="钱迹">

                </cn.dreamn.qianji_auto.ui.views.SuperText>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>