<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/parent_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <com.xuexiang.xui.widget.button.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                app:rv_type="simpleRipple"
                app:rv_color="@color/list_text_color_normal_sub"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                        android:id="@+id/sort_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:sLeftBottomTextColor="@color/list_text_color_normal"
                        app:sLeftBottomTextSize="13sp"
                        app:sLeftBottomTextString="@string/sort_alipay_sub"
                        app:sLeftIconHeight="35sp"
                        app:sLeftIconMarginLeft="25dp"
                        app:sLeftIconRes="@drawable/ic_alipay"
                        app:sLeftIconWidth="35sp"
                        app:sLeftTopTextColor="@color/list_text_color_normal_sub"
                        app:sLeftTopTextSize="18sp"
                        app:sLeftTopTextString="@string/sort_alipay_top"
                        app:sLeftViewGravity="left_center"
                        app:sLeftViewMarginLeft="30dp"
                        app:sUseRipple="false"
                        />

                </androidx.cardview.widget.CardView>
            </com.xuexiang.xui.widget.button.RippleView>
            <com.xuexiang.xui.widget.button.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                app:rv_type="simpleRipple"
                app:rv_color="@color/list_text_color_normal_sub"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                        android:id="@+id/sort_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:sLeftBottomTextColor="@color/list_text_color_normal"
                        app:sLeftBottomTextSize="13sp"
                        app:sLeftBottomTextString="@string/sort_wechat_sub"
                        app:sLeftIconHeight="35sp"
                        app:sLeftIconMarginLeft="25dp"
                        app:sLeftIconRes="@drawable/ic_wechat"
                        app:sLeftIconWidth="35sp"
                        app:sLeftTopTextColor="@color/list_text_color_normal_sub"
                        app:sLeftTopTextSize="18sp"
                        app:sLeftTopTextString="@string/sort_wechat_top"
                        app:sLeftViewGravity="left_center"
                        app:sLeftViewMarginLeft="30dp"
                        app:sUseRipple="false"
                        />

                </androidx.cardview.widget.CardView>
            </com.xuexiang.xui.widget.button.RippleView>






        </LinearLayout>

    </ScrollView>
</LinearLayout>